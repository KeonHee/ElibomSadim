<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.midas.midasmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTask"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden">
        </activity>

        <activity android:name=".TeamDetailActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"/>

        <activity android:name=".VoluntDetailActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"/>

        <activity android:name=".ReportDetailActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden"/>


        <activity
            android:name=".side.MyInfoActivity"
            android:parentActivityName=".MainActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".side.MyActivityActivity"
            android:parentActivityName=".MainActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".side.MyDonationActivity"
            android:parentActivityName=".MainActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".side.MyTeamActivity"
            android:parentActivityName=".MainActivity"
            android:configChanges="screenSize|orientation|keyboard|keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>